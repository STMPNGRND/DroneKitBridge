<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="MainFragment">
        <item name="android:padding">@dimen/padding_large</item>
    </style>

    <style name="Text"></style>
    <style name="Button"></style>

    <style name="Text.Title">
        <item name="android:textSize">@dimen/textsize_large</item>
        <item name="android:textColor">@color/text_title</item>
    </style>

    <style name="Text.Summary">
        <item name="android:padding">@dimen/padding_small</item>
    </style>

    <style name="Text.Prompt">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingRight">@dimen/padding_small</item>
    </style>

    <style name="Text.Prompt.MinWidth">
        <item name="android:minWidth">@dimen/text_prompt_minWidth</item>
    </style>

    <style name="Text.Data">
        <item name="android:minWidth">@dimen/text_data_minWidth</item>
    </style>

    <style name="Text.Log">
        <item name="android:typeface">monospace</item>
    </style>

    <style name="Text.Tip">
        <item name="android:textColor">@color/text_tip</item>
    </style>

    <style name="Text.Status">
        <item name="android:typeface">monospace</item>
    </style>

    <style name="Text.Important">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.ListSeparator">
        <item name="android:background">@color/ListSeparator_background</item>
        <item name="android:textColor">@color/ListSeparator_textColor</item>
        <item name="android:padding">@dimen/padding_large</item>
    </style>

    <style name="Button.NoBorder">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Button.NoBorder.Small">
        <item name="android:textSize">@dimen/textsize_small</item>
        <item name="android:background">@null</item>
    </style>

    <style name="LightShade">
        <item name="android:background">@color/LightShade_background</item>
    </style>

    <style name="LogArea">
        <item name="android:background">@color/LogArea_background</item>
    </style>
</resources>
